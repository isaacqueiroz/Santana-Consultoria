<li>

  <%= role.rolename %>
  <% if @user.has_role?(role.rolename) %>
            <%= link_to 'Remover permissão', user_role_url(:id => role.id, :user_id => @user.id), :method => :delete %>
  <% else %>
    <%= link_to 'Atibuir permissão', user_role_url(:id => role.id, :user_id => @user.id), :method => :put %>
  <% end %>
</li>

