<h1>Editing area</h1>

<% form_for(@area) do |f| %>
  <%= error_messages_for 'area', :object_name => "Área" %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Voltar', areas_path %>